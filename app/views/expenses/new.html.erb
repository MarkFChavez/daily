<h1> Add Expense </h1>
<hr />

<% unless @expense.errors.empty? %>
  <ul>
    <% @expense.errors.full_messages.each do |e| %>
      <li> <%= e %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @expense, :class => "form-horizontal", :role => "form" do |f| %>
  <div class="form-group">
    <%= f.label :amount, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :amount %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Add Expense", :class=>"btn btn-primary" %>
    </div>
  </div>
<% end %>
